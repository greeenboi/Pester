{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pester",
  "version": "0.1.0",
  "identifier": "com.suvan.pester",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Pester",
        "width": 300,
        "height": 600,
        "decorations": false,
        "visible": false,
        "resizable": false,
        "alwaysOnTop": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main-tray",
      "iconPath": "icons/32x32.png",
      "tooltip": "Pester"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "en-US",
        "license": "LICENSE",
        "bannerPath": "icons/icon.png",
        "dialogImagePath": "icons/icon.png",
        "componentRefs": [
          "Path"
        ],
        "fragmentPaths": [
          "wix/custom-action.wxs"
        ]
      },
      "nsis": {
        "license": "../LICENSE",
        "headerImage": "icons/icon.png",
        "sidebarImage": "icons/icon.png",
        "installerIcon": "icons/icon.ico",
        "installMode": "perUser",
        "languages": ["English"],
        "displayLanguageSelector": false,
        "compressionLevel": "ultra",
        "customLanguageFiles": {},
        "template": "nsis/installer.nsi",
        "startMenuFolder": "Pester"
      }
    },
    "publisher": "Suvan GS",
    "copyright": "Copyright Â© 2026 Suvan GS",
    "shortDescription": "Pester - Fast & simple messaging app",
    "longDescription": "A lightweight, privacy-focused messaging application built with Tauri and React.",
    "externalBin": [],
    "homepage": "https://github.com/greeenboi/Pester",
    "licenseFile": "../LICENSE"
  }
}
