{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pester",
  "version": "0.1.0",
  "identifier": "com.suvan.pester",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Pester",
        "width": 300,
        "height": 600,
        "decorations": false,
        "visible": false,
        "resizable": false,
        "alwaysOnTop": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main-tray",
      "iconPath": "icons/32x32.png",
      "tooltip": "Pester"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerHooks": "nsis/hooks.nsh",
        "headerImage": "icons/icon.bmp",
        "sidebarImage": "icons/icon.bmp",
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": ["English"],
        "displayLanguageSelector": false,
        "startMenuFolder": "Pester"
      }
    },
    "publisher": "Suvan GS",
    "copyright": "Copyright Â© 2026 Suvan GS",
    "shortDescription": "Pester - Fast & simple messaging app",
    "longDescription": "A lightweight, privacy-focused messaging application built with Tauri and React.",
    "externalBin": [],
    "homepage": "https://github.com/greeenboi/Pester",
    "licenseFile": "../LICENSE"
  }
}
